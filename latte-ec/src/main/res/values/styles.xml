<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="InputTextLayoutCounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorEditText</item>
    </style>

    <style name="TextInputLayoutLineColor" parent="Theme.AppCompat.Light">
        <!--没有获取焦点时的颜色-->
        <item name="colorControlNormal">@color/colorEditText</item>
        <!--获取焦点时的颜色-->
        <item name="colorControlActivated">@color/app_main</item>
    </style>

</resources>