<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/record_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_main"
        android:elevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_record_detail_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="{fa-angle-left}"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/record_detail_title"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxEms="7"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_toRightOf="@+id/icon_record_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_add_star"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="25sp"
                android:text="{fa-star}"
                android:textColor="@android:color/white"
                android:layout_marginRight="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:theme="@style/Theme.AppCompat.Light"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/icon_add_share"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="25sp"
                android:text="{fa-share-alt}"
                android:textColor="@android:color/white"
                android:layout_marginRight="60dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:theme="@style/Theme.AppCompat.Light"/>


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/web_re_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.ContentFrameLayout>

</LinearLayout>